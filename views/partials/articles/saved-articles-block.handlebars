{{#each newArticles}}

<div class="{{#if isSaved}}article-container-saved{{else}}article-container{{/if}}">
    <div class="title-container">
        <a href="https://news.google.com/{{ link }}" target="_blank">
            <h3>{{ title }}</h3>
        </a>
    </div>
    <div class="button-container">
        <input type="button" class="button show-article" value="Article Notes" article-id="{{ _id }}">
        <input type="button" class="button remove-article" value="Remove From Saved" article-id="{{ _id }}">
    </div>
    <div class="notes-container">

    </div>
</div>

{{/each}}