 {{#each newArticles}}

<div class="{{#if isSaved}}article-container-saved{{else}}article-container{{/if}}">
    <div class="title-container">
        <a href="https://news.google.com/{{ link }}" target="_blank"><h3>{{ title }}</h3></a>
    </div>
    <div class="button-container">
        <input type="button" class="button show-article" value="Show" article-id="{{ _id }}">
        <input type="button" class="button remove-article" value="Remove" article-id="{{ _id }}">
    </div>
</div>

{{/each}}