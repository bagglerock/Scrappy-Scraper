 {{#each newArticles}}

<div class="{{#if isSaved}}article-container-saved{{else}}article-container{{/if}}">
    <div class="title-container">
        <a href="https://news.google.com/{{ link }}" target="_blank">
            <h3>{{ title }}</h3>
        </a>
    </div>
    <div class="summary-container">
        <p>{{ summary }}</p>
    </div>
    <div class="button-container">
        {{#if isSaved}}
        <input type="button" class="button save-article" value="Already Saved" disabled> {{else}}
        <input type="button" class="button save-article" value="Save Article" article-link="{{ link }}" article-title="{{ title }}" article-summary="{{ summary }}"
            article-id="{{ _id }}"> {{/if}}
    </div>
</div>

{{/each}}